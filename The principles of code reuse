name = "Kay"
number = len(name) * 9

print("Hello " + name + ". Your lucky number is " + str(number))

name = "Cameron"
number = len(name) * 9

print("Hello " + name + ". Your lucky number is " + str(number))

#This will print
#"Hello Kay. Your lucky number is 27" - Kay is a 3 letter name, x that by 9 to get the lucky number
#"Hello Cameron. Your lucky number is 63" - Cameron is a 7 letter name, x that by 9 to get the lucky number

def lucky_number(name):
    number = len(name) * 9
    print ("Hello " + name + ". Your lucky number is " + str(number))

lucky_number("Kay")
lucky_number("Cameron")
