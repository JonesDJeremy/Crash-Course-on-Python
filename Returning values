    return base*height/2

#This will print nothing because the base and height are not defined

def area_trianlge(base, height):
    return base*height/2
area_a = area_trianlge(5,4)
area_b = area_trianlge(7,3)
sum = area_a + area_b
print("The sum of both areas is: " +str(sum))

#This will print The sum of both areas is: 20.5

def convert_seconds(seconds):
    hours = seconds // 3600
    minutes = (seconds - hours * 3600)  // 60
    remaining_seconds = seconds - hours * 3600 - minutes * 60
    return hours, minutes,  remaining_seconds

hours, minutes, seconds = convert_seconds(5000)
print (hours, minutes, seconds)

def gretting(name):
    print("Welcom, " + name)
    result = gretting("Jeremy")
    print(result)
